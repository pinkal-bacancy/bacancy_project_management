<div class="row">
  <div class="col-sm-12">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title"><%= @client.new_record? ? 'New' : 'Update '%>Client</h4>
        <h6 class="card-subtitle"><%= @client.new_record? ? 'Add new  client' : 'Update client Information'%> </h6>
        <form class="form">
          <div class="form-group m-t-40 row">
            <%= f.label :name, class: 'col-2 col-form-label' %>
            <div class="col-10">
              <%= f.text_field :client_name, class: 'form-control'%>
            </div>
          </div>
          
          <div class="form-group m-t-40 row">
            <%= f.label :email, class: 'col-2 col-form-label' %>
            <div class="col-10">
              <%= f.email_field :client_email, class: 'form-control'%>
            </div>
          </div>

          <div class="form-group m-t-40 row">
            <%= f.label :contact, class: 'col-2 col-form-label' %>
            <div class="col-10">
              <%= f.text_field :client_contact, class: 'form-control'%>
            </div>
          </div>

          <div class="form-group m-t-40 row">
            <%= f.label :country, class: 'col-2 col-form-label' %>
            <div class="col-10">
              <%= f.country_select :country, { include_blank: 'Select a country' }, { class: 'country-select-box select2 form-control custom-select' } %>
            </div>
          </div>
          
          <div class="form-group row">
            <%= f.submit @client.new_record? ? 'Create' : 'update', class: 'btn btn-success d-none d-lg-block m-l-15'%>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
