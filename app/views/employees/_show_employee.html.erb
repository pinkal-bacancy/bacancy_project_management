<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h4 class="modal-title">Employee Detail</h4>
      <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">

      <div class="card oh">
        <div class="card-body">
          <h5 class="card-title"><%= employee&.first_name.capitalize %> <%= employee&.last_name.capitalize %> </h5>
          <table id="example23" class="display nowrap table color-table inverse-table" cellspacing="0" width="100%">
            <tr>
              <td>Name</td>
              <td><%= employee&.first_name %> <%= employee&.last_name %></td>
            </tr>
            <tr>
              <td>Email</td>
              <td><%= employee&.email %></td>
            </tr>
            <tr>
              <td>Primary Technology</td>
              <td><%= employee&.technology&.name %></td>
            </tr>
            <tr>
              <td>Role</td>
              <td><%= employee&.roles&.first&.name %></td>
            </tr>
          </table>
        </div>
      </div>

    </div>
  </div>
</div>
<script type="text/javascript">
  $(".close").click(function(){
    $(".modal").hide();
  });
</script>
