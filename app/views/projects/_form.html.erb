<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>

<div class="form-group m-t-40 row">
	<%= f.label :project_name, class: "col-2 col-form-label" %>
	<div class="col-10">
		<%= f.text_field :project_name, class: "form-control",placeholder: "Project Name"%>
	</div>
</div>

<div class="form-group m-t-40 row">
	<%= f.label :start_date, class: "col-2 col-form-label" %>
	<div class="col-10">
		<%= f.date_field :start_date, class: "form-control",placeholder: "Start Date"%>
	</div>
</div>

<div class="form-group m-t-40 row">
	<%= f.label :end_date, class: "col-2 col-form-label" %>
	<div class="col-10">
		<%= f.date_field :end_date, class: "form-control",placeholder: "End Date" %>
	</div>
</div>

<div class="form-group m-t-40 row">
	<%= f.label :project_manager, class: "col-2 col-form-label" %>
	<div class="col-10">
		<%= f.select :employee_id, Employee.all.collect { |p| [ p.username, p.id ] }, {include_blank: "select"}, {class: "select2 form-control custom-select",} %>
	</div>
</div>

<div class="form-group m-t-40 row">
	<%= f.label :client_id, class: "col-2 col-form-label" %>
	<div class="col-10">
		<%= f.select :client_id, Client.all.collect { |p| [ p.client_name, p.id ] }, {include_blank: "select"}, {class: "select2 form-control custom-select"} %>
	</div>
</div>

<div class="form-group m-t-40 row">
	<%= f.label :technologies, class: "col-2 col-form-label" %>
	<div class="col-10">
		<%= f.select :technology_ids, Technology.all.collect { |p| [ p.name, p.id ] }, {include_blank: "select"}, {class: "select2 form-control custom-select js-example-basic-single", multiple: true} %>
	</div>
</div>

<div class="form-group m-t-40 row">
	<%= f.label :budget, class: "col-2 col-form-label" %>
	<div class="col-10">
		<%= f.text_field :price, class: "form-control",placeholder: "Budget"%>
	</div>
</div>

<div class="form-group m-t-40 row">
	<%= f.label :rough_order_magnitude, class: "col-2 col-form-label" %>
	<div class="col-10">
		<%= f.text_field :rough_order_magnitude, class: "form-control",placeholder: "Rough Order Magnitude"%>
	</div>
</div>




<script type="text/javascript">
	$(document).on('ready',function(){
	 $('.js-example-basic-single').select2();
	});
</script>
