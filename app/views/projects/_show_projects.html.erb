<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h4 class="modal-title">Project Detail</h4>
      <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">

      <div class="card oh">
        <div class="card-body">
          <h5 class="card-title"><%= project&.project_name %> Project</h5>
          <table id="example23" class="display nowrap table color-table inverse-table" cellspacing="0" width="100%">
            <tr>
              <td>Start Date</td>
              <td><%= project&.start_date%></td>
            </tr>
            <tr>
              <td>End Date</td>
              <td><%= project&.end_date%></td>
            </tr>
            <tr>
              <td>Project Manager</td>
              <td><%= find_employee(project) %></td>
            </tr>
            <tr>
              <td>Budget</td>
              <td><%= project&.price.format %></td>
            </tr>
            <tr>
              <td>Client</td>
              <td><%= project&.client&.client_name %></td>
            </tr>
            <tr>
              <td>Rough Order Magnitute</td>
              <td><%= project&.rough_order_magnitude%></td>
            </tr>
          </table>
        </div>
      </div>

    </div>
  </div>
</div>
<script type="text/javascript">
  $(".close").click(function(){
    $(".modal").hide();
  });
</script>

