<div class="card-group">
  <!-- card -->
  <div class="card o-income">
    <div class="card-body">
      <div class="d-flex m-b-30 no-block">
        <h4 class="card-title m-b-0 align-self-center">Employee Chart</h4>
      </div>
      <div id="income">
        <center>
          <%= pie_chart Employee.group(:is_primary).count, donut: true, refresh: 60, messages: {empty: "No data"},  width: "350px", height: "280px", colors: ["#e27948", "#000000"], library: {plotOptions: {pie: {dataLabels: {format: "<b>Dedicated</b>"}}}} %>
        </center>
      </div>
      <ul class="list-inline m-t-30 text-center font-12">
        <li><i class="fa fa-circle" style="color: #000;"></i> Dedicated</li>
        <li><i class="fa fa-circle" style="color: #e27948;"></i> Non-dedicated</li>
      </ul>
    </div>
  </div>
  <!-- card -->
  <div class="card">
    <div class="p-20 p-t-25">
      <h4 class="card-title">Reports</h4>
    </div>
    <div class="d-flex no-block p-15 align-items-center">
      <div class="round round-info"><i class="fa fa-user"></i></div>
      <div class="m-l-10 ">
        <h3 class="m-b-0"><%= total_emp_count %></h3>
        <h6 class="text-muted font-light m-b-0">Your company's total Employees</h6> 
      </div>
    </div>
    <hr>
    <div class="d-flex no-block p-15 align-items-center">
      <div class="round round-primary"><i class="ti-view-list-alt"></i></div>
      <div class="m-l-10">
        <h3 class="m-b-0"><%= total_project_count %></h3>
        <h6 class="text-muted font-light m-b-0">Your company's total projects</h6>
      </div>
    </div>
    <hr>
    <div class="d-flex no-block p-15 m-b-15 align-items-center">
      <div class="round round-danger"><i class="fa fa-code"></i></div>
      <div class="m-l-10">
        <h3 class="m-b-0"><%= total_technology_count %></h3>
        <h6 class="text-muted font-light m-b-0">Your company's total Technologies</h6>
      </div>
    </div>
  </div>
  <!-- card -->
  <div class="card">
    <div class="card-body">
      <div class="d-flex">
          <div>
            <h5 class="card-title">Employees</h5>
            <h6 class="card-subtitle">Employees working in more than one project.</h6>
          </div>
      </div>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>NAME</th>
              <th>PROJECTS</th>
              <th>TECHNOLOGY</th>
            </tr>
          </thead>
          <tbody>
            <% find_employee_more_than_one_project.each do |employee| %>
              <tr>
                <td><%= employee&.username %></td>
                <td class="txt-oflo"><% employee&.assignments.each do |assignment| %><%= find_project(assignment) %><br><% end %></td>
                <td><%= employee&.technology&.name %></td>
              </tr>
            <% end %>  
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
