<%= javascript_include_tag "leave_lists"  %>
<div class="row">
  <div class="col-sm-12">
    <div class="card">
      <div class="card-body">
				<h4 class="card-title">Add Leave</h4>
				<%= form_for @leave_list,class: "form" do |f| %>
					<%= render "form", f: f %>
					<%= f.submit "Add Leave", id: "leave_list_submit", class: "btn btn-success waves-effect waves-light m-r-10" %>
				<% end %>
			</div>
		</div>
	</div>
</div>

