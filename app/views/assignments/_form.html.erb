<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>

<div class="form-group m-t-40 row">
	<%= f.label :start_date, class: "col-2 col-form-label" %>
	<div class="col-10">
		<%= f.date_field :start_date, class: "form-control",placeholder: "Start Date"%>
	</div>
</div>

<div class="form-group m-t-40 row">
	<%= f.label :end_date, class: "col-2 col-form-label" %>
	<div class="col-10">
		<%= f.date_field :end_date, class: "form-control",placeholder: "End Date", min: Date.today %>
	</div>
</div>

<div class="form-group m-t-40 row">
	<%= f.label :employee_ids, class: "col-2 col-form-label" %>
	<div class="col-10">
		<%= f.select :employee_ids, employee_with_role.collect { |p| [ p.username, p.id ] }, {include_blank: "select"}, {class: "select2 form-control custom-select js-example-basic-single bg-grey", multiple: true} %>
	</div>
</div>

<div class="form-group m-t-40 row">
	<%= f.label :project_id, class: "col-2 col-form-label" %>
	<div class="col-10">
		<%= f.select :project_id, Project.all.collect { |p| [ p.project_name, p.id ] }, {include_blank: "select"}, {class: "select2 form-control custom-select"} %>
	</div>
</div>

<script type="text/javascript">
	$(document).on('ready',function(){
	 $('.js-example-basic-single').select2();
	});
</script>
